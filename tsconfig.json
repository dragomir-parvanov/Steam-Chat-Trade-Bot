{
  "compilerOptions": {
    "target": "es6",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": false,
    "module": "CommonJS",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react",
    "noImplicitAny": false,
    "baseUrl": ".",
    "rootDir": "./",
    "experimentalDecorators": true,
    "sourceMap": true
  },
  "include": ["src"],
  "exclude": ["./src/*.bench.ts", "./src/*.noiso.ts", "./src/chrome-extension/*"]
}
