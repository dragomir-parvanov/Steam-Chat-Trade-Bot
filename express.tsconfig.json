{
  "compilerOptions": {
    "preserveConstEnums": true,
    "pretty": true,
    "target": "es6",
    "module": "commonjs",
    "sourceMap": true,
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "noImplicitAny": false,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "experimentalDecorators": true
  },
  "exclude": ["node_modules", "coverage"],
  "include": ["src"]
}
